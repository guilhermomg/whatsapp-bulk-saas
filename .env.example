# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/whatsapp_bulk_saas?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Encryption Key for sensitive data (tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# WhatsApp Cloud API Configuration
WHATSAPP_API_VERSION=v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_waba_id
WHATSAPP_ACCESS_TOKEN=your_permanent_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verification_token
WHATSAPP_APP_SECRET=your_app_secret

# Webhook Security (optional)
# Comma-separated list of allowed IP addresses for webhook requests
# Leave empty to allow all IPs
# WEBHOOK_IP_WHITELIST=31.13.84.0,31.13.85.0,31.13.86.0

# Queue Configuration (to be configured later)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
